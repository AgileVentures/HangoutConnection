<Module>
	<ModulePrefs title="HangoutConnectionApp">
		<Require feature="rpc" />
		<Require feature="views" />
		<Require feature="locked-domain" />
	</ModulePrefs>
  <Content type="html"><![CDATA[
    <html>
<style>
